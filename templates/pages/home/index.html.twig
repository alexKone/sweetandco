{% extends 'base.html.twig' %}

{% block body %}

  <div class="container" tabindex="-1">
    <div class="row">
      <div class="col-12 pt-0 text-center wrapper--sm">
        <div class="numero--sm tahu text-primary h1">
          Hello                    </div>
        <h2 class="h1 display-4 titre-deco">
          <span>Choisissez votre formule</span>
        </h2>
      </div>
      <div class="col-12 mx-auto">
        <ul class="formules-list choix-formule p-0">
          {% for key, formule in formules %}
            <li>
              <a href="{{ path('app_formules_details', { id: formule.id }) }}" class="formule-list--link row mx-auto product_link">
                <!-- TITRE -->
                <div class="col-md-3">
                  <h3 class="h2 my-auto ml-md-3">
                    Formule <span class="tahu text-primary h1 d-inline-block ml-1 mb-0">{{ key + 1 }}</span>
                  </h3>
                </div>
                <!-- DESC -->
                <div class="col-md-6">
                  <p>{{ formule.shortDescription }}</p>

                </div>
                <!-- PRIX -->
                <div class="col-md-2">
                  <p>
                    <span class="woocommerce-Price-amount amount">{{ formule.price|number_format(2) }}<span class="woocommerce-Price-currencySymbol">€</span></span>
                  </p>
                </div>
                <!-- CHECK -->
                <div class="col-md-1">
                  <span class="check d-flex mx-md-auto"></span>
                </div>
              </a>
            </li>
          {% endfor %}

          {% for key, formule in formules %}
            <li>
              <a href="{{ path('app_formules_details', { id: formule.id }) }}" class="formule-list--link row mx-auto product_link">
                <!-- TITRE -->
                <div class="col-md-3">
                  <h3 class="h2 my-auto ml-md-3">
                    Formule <span class="tahu text-primary h1 d-inline-block ml-1 mb-0">{{ key + 1 }}</span>
                  </h3>
                </div>
                <!-- DESC -->
                <div class="col-md-6">
                  <p>{{ formule.shortDescription }}</p>

                </div>
                <!-- PRIX -->
                <div class="col-md-2">
                  <p>
                    <span class="woocommerce-Price-amount amount">{{ formule.price|number_format(2) }}<span class="woocommerce-Price-currencySymbol">€</span></span>
                  </p>
                </div>
                <!-- CHECK -->
                <div class="col-md-1">
                  <span class="check d-flex mx-md-auto"></span>
                </div>
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>

{% endblock %}

